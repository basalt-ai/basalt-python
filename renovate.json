{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": [
        "dependencies"
    ],
    "dependencyDashboard": true,
    "extends": [
        "config:best-practices",
        ":disableRateLimiting"
    ],
    "assignees": [
        "corentings"
    ],
    "packageRules": [
        {
            "groupName": "opentelemetry non-major dependencies",
            "groupSlug": "opentelemetry-minor-patch",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackageNames": [
                "opentelemetry-*"
            ]
        }
    ]
}